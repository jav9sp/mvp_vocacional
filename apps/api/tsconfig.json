{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "rootDir": "./src",
    "outDir": "./dist",
    
    "declaration": true,
    "sourceMap": true,
    
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}