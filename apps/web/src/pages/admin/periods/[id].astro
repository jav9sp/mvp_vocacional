---
import AdminLayout from "../../../layouts/AdminLayout.astro";
const { id } = Astro.params;
---

<AdminLayout title={`Periodo ${id}`}>
  <div class="space-y-4">
    <div>
      <h1 class="text-2xl font-extrabold tracking-tight">Periodo #{id}</h1>
      <p class="mt-1 text-sm text-muted">
        Aquí irá el detalle del periodo (import, export, KPIs y tabla
        estudiantes).
      </p>
    </div>

    <section class="card">
      <p class="text-sm text-muted">Próximamente</p>
    </section>
  </div>
</AdminLayout>
